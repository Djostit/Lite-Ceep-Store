<Page x:Class="Lite_Ceep_Store.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lite_Ceep_Store.Views"
      mc:Ignorable="d"
      xmlns:materialDesing="http://materialdesigninxaml.net/winfx/xaml/themes"
      DataContext="{Binding MainPageVM,
                    Source={StaticResource ViewModelLocator}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Margin="5 0 5 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Image Margin="0 25 0 15"
                   Source="\Images\logo.png"
                   
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   
                   MaxHeight="70"/>

            <RadioButton Grid.Row="1"
                         
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         
                         Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                         Command="{Binding CommandStore}"
                         
                         IsChecked="True"
                         
                         Content="МАГАЗИН"
                         
                         FontSize="24"
                         FontFamily="\Fonts\#Jost"
                    
                         Foreground="White"
                         Background="#121212"
                         BorderBrush="Transparent"/>
            <RadioButton Grid.Row="2"
                         
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         
                         Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                         Command="{Binding CommandLibrary}"
                         
                         Content="БИБЛИОТЕКА"
                         
                         FontSize="24"
                         FontFamily="\Fonts\#Jost"
                    
                         Foreground="White"
                         Background="#121212"
                         BorderBrush="Transparent"/>
            <RadioButton Grid.Row="3"
                         
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         
                         Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}"
                         Command="{Binding CommandActivation}"
                         
                         Content="АКТИВАЦИЯ"
                         
                         FontSize="24"
                         FontFamily="\Fonts\#Jost"
                    
                         Foreground="White"
                         Background="#121212"
                         BorderBrush="Transparent"/>

        </Grid>

        <Grid Grid.Column="1"
              Margin="0 0 0 25">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid HorizontalAlignment="Right"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Foreground="White"
                           Text="{Binding CurrentBalance,
                                 Mode=TwoWay,
                                 UpdateSourceTrigger=PropertyChanged}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="\Fonts\#Jost"
                           FontSize="14"
                           Panel.ZIndex="1"
                           Margin="5 0 5 0"/>
                
                <Border Grid.Column="0"
                        BorderThickness="1"
                        CornerRadius="10"
                        Background="#383838"
                        Margin="0 5 0 5"/>

                <Menu Grid.Column="1"
                      Panel.ZIndex="1">
                    <MenuItem 
                        Header="{Binding LogoUsername,
                                 Mode=TwoWay,
                                 UpdateSourceTrigger=PropertyChanged}"
                        FontSize="20"
                        Foreground="White"
                        FontFamily="\Fonts\#Jost">
                        <MenuItem Header="Пополнить баланс"
                                  FontSize="14"
                                  Command="{Binding CommandReplenishmentBalance, 
                                            IsAsync=True}"/>
                        <MenuItem Header="Настройки"
                                  FontSize="14"
                                  Command="{Binding CommandSetting}"/>
                        
                    </MenuItem>
                    <Menu.Resources>
                        <SolidColorBrush x:Key="MaterialDesignPaper" Color="#383838"/>
                    </Menu.Resources>
                </Menu>
                <Border Grid.Column="1"
                        BorderThickness="1"
                        CornerRadius="30"
                        Background="#383838"/>
            </Grid>

            <Frame Grid.Row="1"
                   Content="{Binding PageSource}"
                   NavigationUIVisibility="Hidden"
                   Margin="0 5 50 0"/>
        </Grid>

    </Grid>
</Page>